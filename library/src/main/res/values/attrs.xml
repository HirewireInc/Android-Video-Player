<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="EasyVideoPlayer">

        <attr name="hvp_source" format="string" />

        <attr name="hvp_leftAction" format="enum">
            <enum name="none" value="0" />
            <enum name="previous" value="1" />
        </attr>

        <attr name="hvp_rightAction" format="enum">
            <enum name="none" value="2" />
            <enum name="next" value="3" />
        </attr>

        <attr name="hvp_previousDrawable" format="reference" />
        <attr name="hvp_playDrawable" format="reference" />
        <attr name="hvp_pauseDrawable" format="reference" />
        <attr name="hvp_nextDrawable" format="reference" />

        <attr name="hvp_hideControlsOnPlay" format="boolean" />
        <attr name="hvp_autoPlay" format="boolean" />

        <attr name="hvp_disableControls" format="boolean" />

        <attr name="hvp_themeColor" format="color" />

    </declare-styleable>

</resources>